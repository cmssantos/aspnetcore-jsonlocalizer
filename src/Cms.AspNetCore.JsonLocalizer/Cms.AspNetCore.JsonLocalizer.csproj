<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>Cms.AspNetCore.JsonLocalizer</PackageId>
    <Title>Cms.AspNetCore.JsonLocalizer</Title>
    <Version>1.0.0</Version>
    <Authors>Cleudice Santos</Authors>
    <Company>Cms</Company>
    <Description>JSON-based localization for ASP.NET Core. Supports nested keys and culture fallback.</Description>
    <PackageTags>localization json aspnetcore i18n l10n</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/cmssantos/aspnetcore-jsonlocalizer</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/cmssantos/aspnetcore-jsonlocalizer</PackageProjectUrl>
    <Copyright>Copyright © Cleudice Santos</Copyright>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.3.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.5" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.5" />
  </ItemGroup>

</Project>
